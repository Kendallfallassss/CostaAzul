@model CostaAzul.API.Models.Entities.Habitacion
@{
    ViewData["Title"] = "Crear nueva habitación";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="text-primary">
                    <i class="fas fa-bed me-2"></i>
                    Crear Nueva Habitación
                </h2>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>
                    Volver
                </a>
            </div>

            <!-- Card del formulario -->
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-plus-circle me-2"></i>
                        Información de la Habitación
                    </h5>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Create" method="post" class="room-form">

                        <!-- Hotel Selection -->
                        <div class="mb-4">
                            <label asp-for="HotelId" class="form-label fw-bold">
                                <i class="fas fa-hotel me-2"></i>
                                Hotel
                            </label>
                            <select asp-for="HotelId" class="form-select form-select-lg" asp-items="ViewBag.Hoteles" required>
                                <option value="">-- Selecciona un hotel --</option>
                            </select>
                            <span asp-validation-for="HotelId" class="text-danger"></span>
                        </div>

                        <!-- Información básica en dos columnas -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Numero" class="form-label fw-bold">
                                    <i class="fas fa-door-open me-2"></i>
                                    Número de Habitación
                                </label>
                                <input asp-for="Numero" class="form-control form-control-lg"
                                       placeholder="Ej: 101, 205, etc." required />
                                <span asp-validation-for="Numero" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Tipo" class="form-label fw-bold">
                                    <i class="fas fa-tag me-2"></i>
                                    Tipo de Habitación
                                </label>
                                <input asp-for="Tipo" class="form-control form-control-lg"
                                       placeholder="Ej: Suite, Estándar, Deluxe" required />
                                <span asp-validation-for="Tipo" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Pricing y capacidad -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="PrecioPorPersona" class="form-label fw-bold">
                                    <i class="fas fa-dollar-sign me-2"></i>
                                    Precio por Persona (₡)
                                </label>
                                <input asp-for="PrecioPorPersona" class="form-control form-control-lg"
                                       type="number" step="100" min="0" placeholder="0" required />
                                <small class="text-muted">Precio en colones costarricenses</small>
                                <span asp-validation-for="PrecioPorPersona" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Capacidad" class="form-label fw-bold">
                                    <i class="fas fa-users me-2"></i>
                                    Capacidad Máxima
                                </label>
                                <input asp-for="Capacidad" class="form-control form-control-lg"
                                       type="number" min="1" max="10" placeholder="1" required />
                                <small class="text-muted">Número máximo de huéspedes</small>
                                <span asp-validation-for="Capacidad" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Disponibilidad -->
                        <div class="mb-4">
                            <div class="form-check form-switch">
                                <input asp-for="Disponibilidad" class="form-check-input" role="switch" />
                                <label asp-for="Disponibilidad" class="form-check-label fw-bold">
                                    <i class="fas fa-toggle-on me-2"></i>
                                    Habitación disponible para reservas
                                </label>
                            </div>
                            <small class="text-muted">Activar si la habitación está lista para recibir huéspedes</small>
                        </div>

                        <hr class="my-4">

                        <!-- Botones -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="fas fa-times me-2"></i>
                                Cancelar
                            </a>
                            <button type="submit" class="btn btn-success btn-lg submit-btn">
                                <i class="fas fa-save me-2"></i>
                                Guardar Habitación
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Información adicional -->
            <div class="mt-4">
                <div class="alert alert-info border-0">
                    <i class="fas fa-info-circle me-2"></i>
                    <strong>Tip:</strong> Asegúrate de verificar que el número de habitación no esté duplicado en el hotel seleccionado.
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Estilos para el formulario de habitación */
    .room-form {
        /* Sin efectos complejos */
    }

    .form-control-lg, .form-select-lg {
        border: 2px solid #dee2e6;
        transition: border-color 0.3s ease;
    }

        .form-control-lg:focus, .form-select-lg:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
        }

        .form-control-lg:valid {
            border-color: #198754;
        }

        .form-control-lg:invalid {
            border-color: #dc3545;
        }

    .form-check-input {
        width: 3rem;
        height: 1.5rem;
    }

    .submit-btn {
        min-width: 200px;
        font-weight: 600;
    }

        .submit-btn:hover {
            background-color: #157347;
            border-color: #146c43;
        }

    .card {
        transition: box-shadow 0.3s ease;
    }

        .card:hover {
            box-shadow: 0 8px 20px rgba(0,0,0,0.1) !important;
        }

    /* Labels con iconos */
    .form-label {
        color: #495057;
        margin-bottom: 0.75rem;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .d-flex.justify-content-between

    {
        flex-direction: column;
        gap: 1rem;
    }

    .submit-btn, .btn-outline-secondary {
        width: 100%;
    }

    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Formulario de habitación inicializado');

            // Referencias a elementos
            const form = document.querySelector('.room-form');
            const submitBtn = document.querySelector('.submit-btn');
            const hotelSelect = document.getElementById('HotelId');
            const numeroInput = document.getElementById('Numero');

            // Validación simple al enviar
            if (form) {
                form.addEventListener('submit', function(e) {
                    const requiredFields = form.querySelectorAll('[required]');
                    let isValid = true;

                    requiredFields.forEach(field => {
                        if (!field.value.trim()) {
                            field.classList.add('is-invalid');
                            isValid = false;
                        } else {
                            field.classList.remove('is-invalid');
                        }
                    });

                    if (!isValid) {
                        e.preventDefault();
                        alert('Por favor completa todos los campos requeridos.');
                        return false;
                    }

                    // Estado de carga en botón
                    submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Guardando...';
                    submitBtn.disabled = true;
                });
            }

            // Validación en tiempo real para campos requeridos
            const inputs = form.querySelectorAll('input, select');
            inputs.forEach(input => {
                input.addEventListener('blur', function() {
                    if (this.hasAttribute('required') && !this.value.trim()) {
                        this.classList.add('is-invalid');
                    } else {
                        this.classList.remove('is-invalid');
                    }
                });

                input.addEventListener('input', function() {
                    if (this.classList.contains('is-invalid') && this.value.trim()) {
                        this.classList.remove('is-invalid');
                    }
                });
            });

            // Formatear número de habitación
            if (numeroInput) {
                numeroInput.addEventListener('input', function() {
                    // Remover caracteres no numéricos excepto letras
                    this.value = this.value.replace(/[^a-zA-Z0-9]/g, '');
                });
            }

            // Actualizar preview del precio
            const precioInput = document.getElementById('PrecioPorPersona');
            if (precioInput) {
                precioInput.addEventListener('input', function() {
                    const valor = parseInt(this.value) || 0;
                    const preview = document.getElementById('precioPreview');
                    if (!preview) {
                        const small = document.createElement('small');
                        small.id = 'precioPreview';
                        small.className = 'text-success fw-bold d-block mt-1';
                        this.parentNode.appendChild(small);
                    }
                    document.getElementById('precioPreview').textContent =
                        valor > 0 ? `₡${valor.toLocaleString()} por persona` : '';
                });
            }
        });
    </script>
}