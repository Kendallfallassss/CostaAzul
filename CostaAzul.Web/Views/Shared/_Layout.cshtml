@using System.Security.Claims
@inject CostaAzul.API.Models.CostaAzulContext _context
@{
    var rol = User.FindFirst(ClaimTypes.Role)?.Value;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hotelify</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <!-- Navegación -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container">
            <!-- Logo/Brand -->
            <a class="navbar-brand fw-bold" href="#" style="font-size: 1.5rem;">
                <i class="fas fa-hotel me-2"></i>
                Hotelify
            </a>

            <!-- Botón móvil -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Menu items -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    @if (rol == "Administrador")
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="Dashboard">
                                <i class="fas fa-tachometer-alt me-1"></i>Inicio
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Hoteles" asp-action="Gestion">
                                <i class="fas fa-building me-1"></i>Hoteles
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Habitaciones" asp-action="Index">
                                <i class="fas fa-bed me-1"></i>Habitaciones
                            </a>
                        </li>
                    }
                    else if (rol == "Cliente")
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Cliente" asp-action="Dashboard">
                                <i class="fas fa-home me-1"></i>Inicio
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Hoteles" asp-action="Index">
                                <i class="fas fa-search me-1"></i>Hoteles
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Reservaciones" asp-action="MisReservas">
                                <i class="fas fa-calendar-check me-1"></i>Mis Reservas
                            </a>
                        </li>
                    }
                </ul>

                <!-- Usuario y logout -->
                <div class="d-flex align-items-center">
                    <span class="text-white me-3">
                        <i class="fas fa-user me-1"></i>
                        @User.Identity.Name
                    </span>
                    <form asp-controller="Usuarios" asp-action="Logout" method="post">
                        <button type="submit" class="btn btn-outline-light btn-sm">
                            <i class="fas fa-sign-out-alt me-1"></i>
                            Salir
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </nav>

    <!-- Contenido principal -->
    <main class="flex-grow-1">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white py-4 mt-auto">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="mb-0">
                        <strong>© 2025 Hotelify</strong> - Todos los derechos reservados
                    </p>
                </div>
                <div class="col-md-6 text-md-end">
                    <div class="social-links">
                        <a href="#" class="text-white me-3" title="Facebook">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#" class="text-white me-3" title="Instagram">
                            <i class="fab fa-instagram"></i>
                        </a>
                        <a href="#" class="text-white me-3" title="Twitter">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a asp-controller="Home" asp-action="Privacy" class="text-white text-decoration-none">
                            Privacidad
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <style>
        /* Estilos básicos para el layout */
        .navbar-brand {
            transition: color 0.3s ease;
        }

            .navbar-brand:hover {
                color: #f8f9fa !important;
            }

        .nav-link {
            transition: all 0.3s ease;
            border-radius: 0.375rem;
            margin: 0 0.25rem;
        }

            .nav-link:hover {
                background-color: rgba(255, 255, 255, 0.1);
                color: #fff !important;
            }

        .social-links a {
            transition: color 0.3s ease;
        }

            .social-links a:hover {
                color: #0d6efd !important;
            }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .navbar-nav

        {
            text-align: center;
            margin-top: 1rem;
        }

        .d-flex.align-items-center {
            flex-direction: column;
            align-items: center !important;
            margin-top: 1rem;
        }

            .d-flex.align-items-center span {
                margin-bottom: 0.5rem;
                margin-right: 0 !important;
            }

        .social-links {
            text-align: center;
            margin-top: 1rem;
        }

        }

        /* Active nav item */
        .nav-link.active {
            background-color: rgba(255, 255, 255, 0.2);
            font-weight: 600;
        }

        /* Button styles */
        .btn-outline-light:hover {
            background-color: #fff;
            color: #0d6efd;
            border-color: #fff;
        }
    </style>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Marcar enlace activo según la URL actual
        document.addEventListener('DOMContentLoaded', function() {
            const currentPath = window.location.pathname;
            const navLinks = document.querySelectorAll('.nav-link');

            navLinks.forEach(link => {
                if (link.getAttribute('href') === currentPath) {
                    link.classList.add('active');
                }
            });

            // Confirmación para logout
            const logoutForm = document.querySelector('form[action*="Logout"]');
            if (logoutForm) {
                logoutForm.addEventListener('submit', function(e) {
                    if (!confirm('¿Estás seguro que deseas cerrar sesión?')) {
                        e.preventDefault();
                    }
                });
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
    @await RenderSectionAsync("Styles", required: false)
</body>
</html>